{
  "name": "panelify",
  "version": "1.0.0",
  "description": "Transform your Markdown files into beautiful grid-based dashboards",
  "main": "dist/main.cjs",
  "type": "module",
  "scripts": {
    "build": "tsc && webpack",
    "start": "npm run build && npx electron .",
    "dev": "npm run build && npx electron . --dev",
    "watch": "tsc -w",
    "fmt": "prettier -w ./src",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "dist": "npm run build && npx electron-builder --publish=never",
    "pack": "npm run build && npx electron-builder --dir",
    "release": "npm run build && npx electron-builder --publish=always"
  },
  "keywords": [
    "electron",
    "dashboard",
    "markdown"
  ],
  "author": {
    "name": "kyokomi",
    "email": "email@kyokomi.dev"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/marked": "^6.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-grid-layout": "^1.3.5",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "html-webpack-plugin": "^5.5.3",
    "prettier": "^3.6.2",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "marked": "^11.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-grid-layout": "^1.4.4"
  },
  "build": {
    "appId": "dev.kyokomi.panelify",
    "productName": "Panelify",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "kyokomi",
      "repo": "Panelify"
    }
  }
}
